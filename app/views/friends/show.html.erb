<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <hr class="my-4">
    <div id="<%= dom_id @friend %>">

      <p>
        <strong>Email:</strong>
        <%= @friend.email %>
      </p>

      <p>
        <strong>Phone:</strong>
        <%= @friend.phone %>
      </p>

      <p>
        <strong>Instagram:</strong>
        <%= @friend.instagram %>
      </p>

    </div>
  <p class="lead">
    <div>
      <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-secondary" %>
      <%= link_to "Delete", @friend, method: :delete, class: "btn btn-secondary" %>
      <%= link_to "Back", friends_path, class: "btn btn-secondary" %>
    </div>
  </p>
</div>


