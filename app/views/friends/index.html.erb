<h1>List of Friends</h1>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <div id="friends">
      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.instagram %></td>
        <td><p>
          <%= link_to "View", friend %>
        </p></td>
        <td><p>
          <%= link_to "Edit", edit_friend_path(friend) %>
        </p></td>
        <td><p>
          <%= link_to "Delete", friend, method: :delete %>
        </p></td>
      <tr>
      <% end %>
    </div>
  </tbody>
</table>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
